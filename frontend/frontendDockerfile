# frontend/Dockerfile
# Stage 1: build Angular app
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# adjust the build command if your package.json uses a different script
RUN npm run build -- --configuration=production

# Stage 2: serve with nginx
FROM nginx:stable-alpine
# Replace <your-app-name> with folder name inside dist (check dist/ after build)
COPY --from=build /app/dist/<your-angular-app-name> /usr/share/nginx/html
# Optional: copy an nginx conf to set headers, fallback routing etc.
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
