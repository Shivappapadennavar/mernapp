# backend/Dockerfile
FROM node:18-alpine

WORKDIR /usr/src/app

# Copy and install only prod deps (use npm ci if package-lock.json present)
COPY package*.json ./
RUN npm ci --only=production

# Copy source
COPY . .

# If your server entry is server.js, else change it
ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

# Make sure your app reads MONGO_URL env var for DB connection and PORT for port.
CMD ["node", "server.js"]
